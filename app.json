{
  "expo": {
    "name": "dropo-app",
    "slug": "dropo-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "dropoapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.dropotoday.dropoapp"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ECE0D1"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.dropotoday.dropoapp"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "cover",
          "backgroundColor": "#ECE0D1"
        }
      ],
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/Lato-Thin.ttf",
            "./assets/fonts/Lato-Light.ttf",
            "./assets/fonts/Lato-Regular.ttf",
            "./assets/fonts/Lato-Bold.ttf",
            "./assets/fonts/Lato-Black.ttf"
          ],
          "android": {
            "fonts": [
              {
                "fontFamily": "Lato",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/Lato-Thin.ttf",
                    "weight": 100,
                    "style": "normal"
                  },
                  {
                    "path": "./assets/fonts/Lato-Light.ttf",
                    "weight": 300,
                    "style": "normal"
                  },
                  {
                    "path": "./assets/fonts/Lato-Regular.ttf",
                    "weight": 400,
                    "style": "normal"
                  },
                  {
                    "path": "./assets/fonts/Lato-Bold.ttf",
                    "weight": 700,
                    "style": "normal"
                  },
                  {
                    "path": "./assets/fonts/Lato-Black.ttf",
                    "weight": 900,
                    "style": "normal"
                  }
                ]
              }
            ]
          }
        }
      ],
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
